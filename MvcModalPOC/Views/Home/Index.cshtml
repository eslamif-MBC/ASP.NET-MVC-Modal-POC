@{
    ViewBag.Title = "Home Page";
}

<style>
    .title {
        text-align: center;
        margin-bottom: 1em;
    }
</style>

@*Render JS before the body*@
@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">
    $(document).ready(function () {
        alert("Hello World");
    });
</script>

<h1 class="title">ASP.NET MVC Modal POC</h1>

<div class="row">
    <div class="col-sm-6">
        <h2>Instructions</h2>

        <p>Enter your name and click the submit button.</p>
        <p>A modal will open, showing your name. </p>
        <p>In the modal, enter your favorite ice cream and click submit.</p>
        <p>The parent page will show your favorite ice cream as well as your name.</p>
    </div>

    <div class="col-sm-6" style="margin-top: 1.5em;">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <input type="button" value="Open Modal">
    </div>
</div>

<div class="modal" id="IceCreamModal">
    <h1>This is my modal</h1>
</div>
